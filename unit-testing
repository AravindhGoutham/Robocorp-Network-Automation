pipeline {
    agent any
    environment {
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout Repository') {
            steps {
                echo 'Checking out latest code from Git'
                checkout scm
            }
        }

        stage('Setup Python Environment') {
            steps {
                echo 'Setting up Python environment...'
                sh '''
                    if [ ! -d "${VENV_DIR}" ]; then
                        python3 -m venv ${VENV_DIR}
                    fi

                    . ${VENV_DIR}/bin/activate
                    pip install --upgrade pip
                    pip install netmiko PyYAML prettytable ipaddress
                '''
            }
        }

        stage('Run IP Validation') {
            steps {
                echo 'Running ipvalidate.py...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    python3 ipvalidate.py > ipvalidate_report.txt || true
                    cat ipvalidate_report.txt
                '''
            }
        }

        stage('Run SSH Check') {
            steps {
                echo 'Running ssh-check.py...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    python3 ssh-check.py > sshcheck_report.txt || true
                    cat sshcheck_report.txt
                '''
            }
        }

        stage('Archive Reports') {
            steps {
                archiveArtifacts artifacts: '*.txt', onlyIfSuccessful: false
            }
        }
    }

    post {
        success {
            echo 'All validation checks passed successfully.'
        }
        failure {
            echo 'One or more checks failed. Please review logs or reports.'
        }
        always {
            echo 'Cleaning up workspace...'
            sh 'rm -rf ${VENV_DIR}'
        }
    }
}
