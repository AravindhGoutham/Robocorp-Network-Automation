pipeline {
    agent any
    environment {
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout Repository') {
            steps {
                echo 'Checking out latest code from Git...'
                checkout scm
            }
        }

        stage('Setup Python Environment') {
            steps {
                echo 'Setting up Python environment...'
                sh '''
                    if [ ! -d "${VENV_DIR}" ]; then
                        python3 -m venv ${VENV_DIR}
                    fi
                    . ${VENV_DIR}/bin/activate
                    pip install --upgrade pip
                    pip install netmiko PyYAML prettytable ipaddress
                '''
            }
        }

        stage('Run IP Validation') {
            steps {
                echo 'Running ipvalidate.py...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    echo "----- IP Validation Results -----"
                    python3 ipvalidate.py
                    echo "---------------------------------"
                '''
            }
        }

        stage('Run SSH Check') {
            steps {
                echo 'Running ssh-check.py...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    echo "----- SSH Connectivity Check -----"
                    python3 ssh-check.py
                    echo "----------------------------------"
                '''
            }
        }
    }

    post {
        success {
            echo 'All validation checks completed successfully.'
        }
        failure {
            echo 'One or more validation checks failed.'
        }
        always {
            echo 'Cleaning up temporary files...'
            sh 'rm -rf ${VENV_DIR}'
        }
    }
}


